<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside> <!-- why was that an aside? -->
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Practice App</h1>

    <h2>
      This is <a href="http://kevinswallow.com">Kevin Swallow's</a> implementation of 
      <a href="http://railstutorial.org/">Michael Hartl's Ruby on Rails </a>
      Tutorial.
    </h2>
    <p><em>
      A Twitter clone built with Ruby on Rails, Bootstrap-Sass, Sqlite3, RSpec and Capybara using TDD, RVM and <a href="https://github.com/Sambalero/h33">Git</a>, deployed on Heroku with Postgres. 
    </em></p>
<%= link_to "Visit my Home Page!", "http://kevinswallow.com", 
                                class: "btn btn-large btn-primary" %>
    <%= link_to "Sign up for the Practice App!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %> 